@model ApiBD.Models.TbServCabecera

@{
    ViewData["Title"] = "Editar Servicio ";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Inicio</a></li>
        <li class="breadcrumb-item"><a href="/IServicios">Servicios</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "IServiciosdet", new { codigo = ViewBag.vServicioId }) ">Detalle</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
    </ol>
</nav>
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h4 class="card-title">@ViewData["Title"] </h4>
                    </div>


                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="Edit" fenctype="multipart/form-data" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Id" class="control-label"></label>
                                            <input asp-for="Id" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Titulo" class="control-label"></label>
                                            <input asp-for="Titulo" class="form-control" />
                                            <span asp-validation-for="Titulo" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="DescCorto" class="control-label"></label>
                                            <input asp-for="DescCorto" class="form-control" />
                                            <span asp-validation-for="DescCorto" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="IdBtnSolicitar" class="control-label"></label>
                                            <input asp-for="IdBtnSolicitar" class="form-control" />
                                            <span asp-validation-for="IdBtnSolicitar" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="IdBtnConoce" class="control-label"></label>
                                            <textarea asp-for="IdBtnConoce" class="form-control" rows="4" cols="50" resize="both"></textarea>
                                            <span asp-validation-for="IdBtnConoce" class="text-danger"></span>
                                        </div>
                                    </div>                          
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Imagen" class="form-label">Escoja la imagen</label>
                                            <input class="form-control-file form-control" id="imagennueva" name="imagennueva" type="file" accept="image/*">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="IsMenu" class="control-label"></label>
                                            <input asp-for="IsMenu" class="form-control" readonly />
                                            <span asp-validation-for="IsMenu" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    @*<input type="submit" value="Save" class="btn btn-primary" />*@

                                    <button type="submit" class="btn btn-primary"><i class="ti-save"></i> Grabar</button>
                                    <a class="btn btn-danger" asp-action="Index" asp-route-codigo="@ViewBag.vServicioId"><i class="ti-back-left"></i> Regresar</a>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>