@model ApiBD.Models.TbConfBotone

@{
    ViewData["Title"] = "Nuevo Botón";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h4 class="card-title">@ViewData["Title"]</h4>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="MenuId" class="control-label">Codigo</label>
                                            <input asp-for="MenuId" class="form-control" readonly value="@ViewBag.SlideCodigo" />
                                            <span asp-validation-for="MenuId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="PaginadetId" class="control-label">Codigo detalle</label>
                                            <input asp-for="PaginadetId" class="form-control" readonly />
                                            <span asp-validation-for="PaginadetId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="BtnTitulo" class="control-label">Titulo</label>
                                            <input asp-for="BtnTitulo" class="form-control" />
                                            <span asp-validation-for="BtnTitulo" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="BtnRuta" class="control-label"></label>
                                            <select asp-for="BtnRuta" class="form-control" asp-items="ViewBag.vMenu"></select>
                                            <span asp-validation-for="BtnRuta" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="BtnClase" class="control-label">Clase</label>
                                            <input asp-for="BtnClase" class="form-control" value="btn btn-primary" readonly/>
                                            <span asp-validation-for="BtnClase" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Icono" class="control-label"></label>
                                            <input asp-for="Icono" class="form-control" value="fa fa-arrow-circle-right" readonly />
                                            <span asp-validation-for="Icono" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6  d-none">
                                        <div class="form-group">
                                            <label asp-for="Orden" class="control-label"></label>
                                            <input asp-for="Orden" class="form-control" value="0"/>
                                            <span asp-validation-for="Orden" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary"><i class="ti-save"></i> Grabar</button> |
                                    <a class="btn btn-danger " href="@Url.Action("Index", "BotonCms", new { codigo = ViewBag.SlideCodigo })"><i class="ti-back-left"></i> Regresar</a>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>