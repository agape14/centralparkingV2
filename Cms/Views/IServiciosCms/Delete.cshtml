@model ApiBD.Models.TbIndServiciocab

@{
    ViewData["Title"] = "Eliminar Servicio";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h4 class="card-title">@ViewData["Title"]</h4>
                        <h3>¿Estas seguro de eliminar?</h3>
                    </div>


                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.TituloGrande)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TituloGrande)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.TituloPeque)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TituloPeque)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Descripcion)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ImagenGrande)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ImagenGrande)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ImagenPeque)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ImagenPeque)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Ruta)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Ruta)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        @*<input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-action="Index">Back to List</a>*@

                        <button type="submit" class="btn btn-primary"><i class="ti-save"></i> Eliminar</button> |
                        <a class="btn btn-danger" asp-action="Index"><i class="ti-back-left"></i> Regresar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>