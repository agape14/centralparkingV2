@model ApiBD.Models.TbServCabecera

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Inicio</a></li>
        <li class="breadcrumb-item"><a href="/ServiciosCabeceraCms">Servicios</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "ServiciosCabeceraCms", new { codigo = ViewBag.vServicioId }) ">Detalle</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
    </ol>
</nav>
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h4 class="card-title">@ViewData["Title"]</h4>
                        <h3>¿Estas seguro de eliminar?</h3>
                    </div>


                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Titulo)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Titulo)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.DescCorto)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DescCorto)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.IdBtnSolicitar)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IdBtnSolicitar)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.IdBtnConoce)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IdBtnConoce)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Imagen)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Imagen)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.IsMenu)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IsMenu)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-primary"><i class="ti-save"></i> Eliminar</button> |
                        <a class="btn btn-danger" asp-action="Index" asp-route-codigo="@ViewBag.vServicioId"><i class="ti-back-left"></i> Regresar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
