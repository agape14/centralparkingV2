@{
    @model ApiBD.Models.TbFormCotizano;
    ViewData["Title"] = "Cotización de Abonados";
}
<!-- Page Header Start -->
<div class="container-fluid page-header py-6 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center">
        <h1 class="display-4 text-white animated slideInDown mb-4">Cotización de Abonados</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a class="text-white" href="~/">Inicio</a></li>
                <li class="breadcrumb-item text-primary active" aria-current="page">Cotización de Abonados</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- Cuerpo page Start -->
<div class="container-xxl py-4">
    <div class="container">
        <div class="row mb-2">
            <div class="col">
                <div class="section_title text-center">
                    <h2>Bienvenido!</h2>
                    <p>Al sistema de Cotización de Central Parking System. Registra los siguientes datos.</p>
                </div>
            </div>
        </div>
        <div class="row g-5">
            <div class="col-lg-6 wow fadeInUp bg-light p-5" data-wow-delay="0.1s" style="min-height: 450px;">
                <div class="position-relative h-100">
                    <h1 class="display-6 mb-4">Solicita tu <span class="text-primary">servicio</span></h1>
                    <p class="mb-4">Deja tus datos y muy pronto nos comunicaremos contigo.</p>
                    <p>¡Muchas gracias por tu preferencia!</p>
                    <h5 class=" mb-4 mt-4">LLAMANOS AL NUMERO</h5>
                    <p class="mb-2"><i class="fa fa-phone me-3 "></i>+511 505 5000</p>
                    <p class="mb-2">Horario de atención: Lunes a Viernes de 9:00 a.m. a 5:00 p.m.</p>
                    <h5 class=" mb-4 mt-4">SEDE CENTRAL</h5>
                    <p class="mb-2">
                        <i class="fa fa-map-marker-alt me-3"></i>Av. Javier Prado Oeste 1650, San Isidro -
                        Lima - Peru
                    </p>
                </div>
            </div>
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                <form asp-action="CotizanosAbonados" method="post">
                    <div class="col-12">
                        <div class="form-floating">
                            <select required class="form-control border-0 bg-light mb-4" id="tipoServicio" placeholder="Tipo Servicio" asp-for="TipoServicio">
                                <option value="2">ABONADOS</option>
                            </select>
                            <label for="tipoServicio">Tipo de Servicio</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            <select id="tipoAbonado" asp-for="TipoAbonado" class="form-control border-0 bg-light mb-4" placeholder="Tipo de Abonado">
                                <option value="Personas">Personas</option>
                                <option value="Empresas">Empresas</option>
                            </select>
                            <label for="tipoAbonado">Tipo de Abonado</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            <select required name="distrito" id="distrito" class="form-control border-0 bg-light mb-4" placeholder="Distrito" asp-for="Distrito">
                                <option value="Cercado de Lima">Cercado de Lima</option>
                                <option value="Miraflores">Miraflores</option>
                                <option value="Pueblo Libre">Pueblo Libre</option>
                                <option value="San Isidro">San Isidro</option>
                                <option value="Surco">Surco</option>
                            </select>
                            <label for="distrito">Distrito</label>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-8">
                            <div class="form-floating">
                                <select id="estacionamiento" asp-for="Estacionamiento" class="form-control border-0 bg-light " placeholder="Estacionamientos">
                                    <option value="Hotel Sheraton">Hotel Sheraton</option>
                                    <option value="Hotel Pullman Miraflores">Hotel Pullman Miraflores</option>
                                    <option value="Clinica Stella Maris">Clinica Stella Maris</option>
                                    <option value="Hotel Pullman San Isidro">Hotel Pullman San Isidro</option>
                                    <option value="Pacifico Seguros">Pacifico Seguros</option>
                                    <option value="CC. Polo II">CC. Polo II</option>
                                    <option value="Sagrado Corazón de Jesus">Sagrado Corazón de Jesus</option>
                                    <option value="Edificio More">Edificio More</option>
                                    <option value="Clinica Tezza">Clinica Tezza</option>
                                </select>
                                <label for="estacionamiento">Estacionamientos</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating">
                                <input type="number" class="form-control border-0 bg-light" id="cantidad" placeholder="Cantidad" min="1" >
                                <label for="cantidad">Cantidad</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-floating">
                                <input required type="text" class="form-control border-0 bg-light mb-4" id="contacto" name="contacto" placeholder="Nombres y Apellidos" asp-for="Contacto">
                                <label for="contacto">Nombres y Apellidos</label>
                            </div>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input required pattern="[0-9]{9}" title="Ingrese un número de celular válido" class="form-control border-0 bg-light" id="celular" name="celular" placeholder="Celular" asp-for="Celular">
                                    <label for="celular">Celular</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input pattern="[0-9]{7}" title="Ingrese un número de telefono válido" class="form-control border-0 bg-light" id="telefono" name="telefono" placeholder="Teléfono" asp-for="Telefono">
                                    <label for="telefono">Teléfono</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input required type="email" class="form-control border-0 bg-light" id="correoElectronico" name="correoElectronico" placeholder="Correo electrónico" asp-for="CorreoElectronico">
                                    <label for="correoElectronico">Correo electrónico</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary py-3 px-6 w-50">
                                    <i class="fas fa-check-square"></i>
                                    Registrar mi cotización
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
  function validarcantidad() {
    var campo = document.getElementById("cantidad");
    if (campo.value < 1) {
      campo.value = 1;
    }
  }
  document.getElementById("cantidad").addEventListener("blur", validarcantidad);

  function mascaraDeCelular(event) {
    var campo = event.target;
    var valor = campo.value.replace(/\D/g, '');
    var mascara = valor.length === 9 ? valor : '999-999-999';
    campo.value = valor.replace(/(\d{3})(\d{3})(\d{3})/, mascara);
  }
  document.getElementById("celular").addEventListener("input", mascaraDeCelular);

  function mascaraDeTelefono(event) {
    var campo = event.target;
    var valor = campo.value.replace(/\D/g, '');
    var mascara = valor.length === 7 ? valor : '999-9999';
    campo.value = valor.replace(/(\d{3})(\d{4})/, mascara);
  }
  document.getElementById("telefono").addEventListener("input", mascaraDeTelefono);
  
</script>

<!-- Cuerpo page End -->