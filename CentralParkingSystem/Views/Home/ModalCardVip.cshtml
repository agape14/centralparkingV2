@model ApiBD.Models.TbFormParkingcard;

@if (Model.Id != 0)
{

    <div class="modal fade" id="modal_cardvip" tabindex="-1" aria-labelledby="modalCardVip" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content rounded-1">
                <div class="modal-header ">
                    <h3 class="modal-title" id="modalCardVip">Parking Card Vip</h3>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!--Accordion wrapper-->
                    <div class="row justify-content-center">
                        <div class="col-lg-12">
                            <script src='https://www.google.com/recaptcha/api.js'></script>
                            <form asp-action="ParkingCard">
                                <div class="form-group mb-2">
                                    <input type="text" asp-for="Dni" class="form-control" placeholder="Ingrese DNI">
                                </div>
                                <div class="form-group mb-2">
                                    <input type="email" asp-for="Correo" class="form-control" placeholder="Ingrese Correo">
                                </div>
                                <div class="form-group mb-4">
                                    <input type="text" asp-for="CodSeguridad" class="form-control"
                                           placeholder="Código de seguridad">
                                </div>
                                <div id="recaptcha" class="g-recaptcha" data-sitekey="6LfI6gUTAAAAAFB6JLcrwFEzROwcglIBqYrbyU14"></div>
                                <div class="clearfix"></div>
                                <div class="form-group mb-2 justify-content-center">
                                    <input type="submit" name="submit" class="btn btn-primary btn-lg" value="Validar">
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}