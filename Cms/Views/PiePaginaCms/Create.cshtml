@{
    ViewData["Title"] = "Nuevo pie de Pagina";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h4 class="card-title">@ViewData["Title"]</h4>
                    </div>

                        <div class="row">
                            <div class="col-md-12">
                                <form asp-action="Create">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Titulo" class="control-label">Título</label>
                                                <input asp-for="Titulo" class="form-control" />
                                                <span asp-validation-for="Titulo" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Imagen" class="control-label"></label>
                                                <input asp-for="Imagen" class="form-control" />
                                                <span asp-validation-for="Imagen" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Orden" class="control-label"></label>
                                                <input asp-for="Orden" class="form-control" />
                                                <span asp-validation-for="Orden" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Estado" class="control-label"></label>
                                                <select class="form-control" asp-for="Estado">
                                                    <option value="1">Activo</option>
                                                    <option value="0">Inactivo</option>
                                                </select>
                                                <span asp-validation-for="Estado" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @*<input type="submit" value="Create" class="btn btn-primary" />
                                        <a asp-action="Index">Back to List</a>*@

                                        <button type="submit" class="btn btn-primary"><i class="ti-save"></i> Grabar</button> |
                                        <a class="btn btn-danger " asp-action="Index"><i class="ti-back-left"></i> Regresar</a>
                                    </div>
                                </form>
                            </div>
                        </div>

                   
                </div>
            </div>
        </div>
    </div>
</div>

