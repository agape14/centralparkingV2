@model ApiBD.Models.TbIndServiciodet

@{
    ViewData["Title"] = "Editar Servicio ";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Inicio</a></li>
        <li class="breadcrumb-item"><a href="/IServicios">Servicios</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "IServiciosdet", new { codigo = ViewBag.vServicioId }) ">Detalle</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
    </ol>
</nav>
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h4 class="card-title">@ViewData["Title"] </h4>
                    </div>


                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="IdCab" class="control-label"></label>
                                            <select asp-for="IdCab" class="form-control" asp-items="ViewBag.IdCab"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Icono" class="control-label"></label>
                                            <input asp-for="Icono" class="form-control" />
                                            <span asp-validation-for="Icono" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Titulo" class="control-label"></label>
                                            <input asp-for="Titulo" class="form-control" />
                                            <span asp-validation-for="Titulo" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Ruta" class="control-label"></label>
                                            <select asp-for="Ruta" class="form-control" asp-items="ViewBag.vMenu"></select>
                                            <span asp-validation-for="Ruta" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="Detalle" class="control-label"></label>
                                            <textarea asp-for="Detalle" class="form-control" rows="4" cols="50" resize="both"></textarea>
                                            <span asp-validation-for="Detalle" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Imagen" class="control-label"></label>
                                            <input asp-for="Imagen" class="form-control" readonly />
                                            <span asp-validation-for="Imagen" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="imagennueva" class="form-label">Escoja la imagen</label>
                                            <input class="form-control-file form-control" id="imagennueva" name="imagennueva" type="file" accept="image/*">
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    @*<input type="submit" value="Save" class="btn btn-primary" />*@

                                    <button type="submit" class="btn btn-primary"><i class="ti-save"></i> Grabar</button>
                                    <a class="btn btn-danger" asp-action="Index" asp-route-codigo="@ViewBag.vServicioId"><i class="ti-back-left"></i> Regresar</a>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>