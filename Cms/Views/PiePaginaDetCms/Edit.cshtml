@model ApiBD.Models.TbConfPiepaginadet

@{
    ViewData["Title"] = "Editar Pie pagina";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Configuraciones</a></li>
        <li class="breadcrumb-item"><a href="/PiePagina">Pie Pagina</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "PiePaginaDet", new { codigo = ViewBag.vPiepaginaId }) ">Detalle</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
    </ol>
</nav>
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h4 class="card-title">@ViewData["Title"] </h4>
                    </div>


                    <div class="row">
                        <div class="col-md-12">
                            <form method="post" enctype="multipart/form-data" asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="PiepaginaId" class="control-label"></label>
                                            @*<input asp-for="PiepaginaId" class="form-control" />*@
                                            <select asp-for="PiepaginaId" class="form-control" asp-items="ViewBag.PiepaginaId" readonly></select>
                                            <span asp-validation-for="PiepaginaId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Icono" class="control-label"></label>
                                            <input asp-for="Icono" class="form-control" />
                                            <span asp-validation-for="Icono" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="Titulo" class="control-label"></label>
                                            <input asp-for="Titulo" class="form-control" />
                                            <span asp-validation-for="Titulo" class="text-danger"></span>
                                        </div>
                                    </div>
                                    @if (Model.TipoRuta ==1)
                                    {
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Ruta" class="control-label"></label>
                                                <select asp-for="Ruta" class="form-control" asp-items="ViewBag.vMenu"></select>
                                                <span asp-validation-for="Ruta" class="text-danger"></span>
                                            </div>
                                        </div>
                                    }
                                    else if (Model.TipoRuta == 2 || Model.TipoRuta == 3 || Model.TipoRuta == 4)
                                    {
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Ruta" class="control-label"></label>
                                                <input asp-for="Ruta" class="form-control" readonly />
                                                <span asp-validation-for="Ruta" class="text-danger"></span>
                                            </div>
                                        </div>
                                    }
                                    else if (Model.TipoRuta == 5)
                                    {
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Ruta" class="control-label"></label>
                                                <input asp-for="Ruta" class="form-control" />
                                                <span asp-validation-for="Ruta" class="text-danger"></span>
                                            </div>
                                        </div>
                                    }else{
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Ruta" class="control-label"></label>
                                                <select asp-for="Ruta" class="form-control" asp-items="ViewBag.vMenu"></select>
                                                <span asp-validation-for="Ruta" class="text-danger"></span>
                                            </div>
                                        </div>
                                    }
                                   

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="TipoRuta" class="control-label"></label>
                                            @*<input asp-for="TipoRuta" class="form-control" />*@
                                            <select class="form-control" asp-for="TipoRuta">
                                                <option value="">Ninguno</option>
                                                <option value="1">Nueva Pestaña</option>
                                                <option value="2">Modal</option>
                                                <option value="3">Formulario</option>
                                                <option value="4">Nueva Pestaña Documento</option>
                                                <option value="5">Ruta Dashboard</option>
                                            </select>
                                            <span asp-validation-for="TipoRuta" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Imagen" class="control-label"></label>
                                            <input asp-for="Imagen" class="form-control" readonly />
                                            <span asp-validation-for="Imagen" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="imagennueva" class="form-label">Escoja la imagen</label>
                                            <input class="form-control-file form-control" id="imagennueva" name="imagennueva" type="file" accept="image/*">
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary"><i class="ti-save"></i> Grabar</button>
                                    @*<a class="btn btn-danger " asp-action="Index"><i class="ti-back-left"></i> Regresar</a>*@
                                    <a class="btn btn-danger" asp-action="Index" asp-route-codigo="@ViewBag.vPiepaginaId"><i class="ti-back-left"></i> Regresar</a>
                                </div>
                                @*<div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>*@
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
