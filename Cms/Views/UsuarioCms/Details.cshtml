@model ApiBD.Models.TbConfUser

@{
    ViewData["Title"] = "Detalles Usuario";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h4 class="card-title">@ViewData["Title"]</h4>
                    </div>


                    <dl class="row">
                        <dt class="col-sm-2">
                            Nombre
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-2">
                            Correo
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-2">
                            Usuario
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Username)
                        </dd>
                       
                        <dt class="col-sm-2">
                            Estado
                        </dt>
                        <dd class="col-sm-10">
                            @if (@Model.Active == true)
                            {
                                <span>Activo</span>
                            }
                            else
                            {
                                <span>Inactivo</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Rol)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Rol.Rol)
                        </dd>
                        <div>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id"><i class="ti-save"></i> Editar</a> |
                            <a class="btn btn-danger" asp-action="Index"><i class="ti-back-left"></i> Regresar</a>
                        </div>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
