@model IEnumerable<ApiBD.Models.TbIndSlidecab>

@{
    ViewData["Title"] = "Listado Banner";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h4 class="card-title">@ViewData["Title"]</h4>
                        <a class="btn btn-primary " href="/SlideCms/Create">
                            <i class="ti-plus"></i>  Nuevo
                        </a>
                    </div>

                    <div class="col-md-12 table-responsive">
                        <table class="table  table-hover table-condensed">
                            <thead>
                                <tr>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Titulo)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Imagen)
                                    </th>
                                    <th scope="col">
                                        Boton
                                    </th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    //string btnTitulo = item.IdBtn1Navigation?.BtnTitulo;
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Titulo)
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Imagen))
                                            {
                                                <div style="width: 200px; height: 150px; overflow: hidden;">
                                                    <img src="@Url.Content(item.Imagen)" alt="Thumbnail" style="width: 100%; height: 100%; object-fit: cover;">
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdBtn1Navigation.BtnTitulo)
                                        </td>
                                        @if(item.Id != 0){
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="ti-pencil"></i> </a> |
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="ti-trash"></i> </a> |
                                                <a href="@Url.Action("Index", "BotonCms", new { codigo = item.Id })" class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Botones"><i class="ti-layout-media-overlay"></i></a>
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>