@model IEnumerable<ApiBD.Models.TbConfPermiso>

@{
    ViewData["Title"] = "Listado de Permisos";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h4 class="card-title">@ViewData["Title"]</h4>

                        <div>
                            <div class="input-group">
                                <div id="radioBtn" class="btn-group">
                                    @foreach (var roles in ViewBag.rolLista)
                                    {
                                        
                                        @if (roles.Id == 1)
                                        {
                                            <a class="btn btn-primary btn-sm active" data-toggle="@roles.Rol" data-title="@roles.Rol" id="enlaceWeb">@roles.Rol</a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-primary btn-sm notActive" data-toggle="@roles.Rol" data-title="@roles.Rol" id="enlaceWeb">@roles.Rol</a>
                                        }
                                    }
                                   @*  <a class="btn btn-primary btn-sm active" data-toggle="tipomenu" data-title="web" id="enlaceWeb">WEB</a>
                                    <a class="btn btn-primary btn-sm notActive" data-toggle="tipomenu" data-title="api" id="enlaceCMS">API</a>
                                    <a class="btn btn-primary btn-sm notActive" data-toggle="tipomenu" data-title="cms" id="enlaceCMS">CMS</a> *@
                                </div>
                                <input type="hidden" name="tiporol" id="tiporol">
                            </div>
                        </div>

                        <a class="btn btn-primary " href="/PermisoCms/Create">
                            <i class="ti-plus"></i>  Nuevo
                        </a>
                    </div>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Rol)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Menu)
                                    </th>
                                   
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @*<td>
                                            @Html.DisplayFor(modelItem => item.Permiso)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Descripcion)
                                        </td>
                                        <td>
                                            @if (item.Estado == 1)
                                            {
                                                <span class="badge rounded-pill bg-success text-white">ACTIVO</span>
                                            }
                                            else if (item.Estado == 0)
                                            {
                                                <span class="badge rounded-pill bg-danger text-white">INACTIVO</span>
                                            }
                                        </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Rol.Rol)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Menu.Nombre)
                                        </td>
                                        
                                        @if(item.Id != 0){
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="ti-pencil"></i> </a> |
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="ti-trash"></i> </a>
                                            </td>
                                        }
                                      
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


