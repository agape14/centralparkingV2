@model ApiBD.Models.TbFormContactano;

@{
    ViewData["Title"] = "Contactanos";
}
<!-- Page Header Start -->
<div class="container-fluid page-header py-6 my-6 mt-0 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center">
        <h1 class="display-4 text-white animated slideInDown mb-4">Contáctanos</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a class="text-white" href="~/">Inicio</a></li>
                <li class="breadcrumb-item text-primary active" aria-current="page">Contáctanos</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- Contact Start -->
<div class="container-xxl py-6">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s" style="min-height: 450px;">
                <div class="position-relative h-100">
                    <iframe class="position-relative w-100 h-100"
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3901.2653347379905!2d-77.047856!3d-12.093979199999998!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9105c851027259ff%3A0xe200eb17c9ced177!2sAv%20Javier%20Prado%20Oeste%201650%2C%20Lima%2015073!5e0!3m2!1ses-419!2spe!4v1677433974756!5m2!1ses-419!2spe"
                            frameborder="0" style="min-height: 450px; border:0;" allowfullscreen="" aria-hidden="false"
                            tabindex="0"></iframe>
                </div>
            </div>
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                <h6 class="text-primary text-uppercase mb-2">Contáctanos</h6>
                <h1 class="display-6 mb-4">Si tiene alguna consulta, contáctenos</h1>
                <p class="mb-4">¿Tienes problemas? Encuentra la respuesta a tu pregunta aquí. ¡No dudes en contactarnos!.</p>
                <form asp-action="Contactanos">
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="form-floating">
                                <select class="form-control border-0 bg-light" id="cbxTipoServicio" asp-for="TipoServicio"
                                        placeholder="Tipo Servicio">
                                    <option value="0">Seleccione Tipo de Servicio</option>
                                    <option value="1">ADMINISTRACIÓN DE ESTACIONAMIENTOS</option>
                                    <option value="2">GESTION DE ABONADOS</option>
                                    <option value="3">OTROS SERVICIOS</option>
                                </select>
                                <label for="cbxTipoServicio">Tipo de Servicio</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-0 bg-light" id="name" placeholder="Nombres" asp-for="Nombre"> 
                                <label for="name">Nombres</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="email" class="form-control border-0 bg-light" id="email" placeholder="Correo electrónico" asp-for="CorreoElectronico">
                                <label for="email">Correo electrónico</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control border-0 bg-light" id="subject" placeholder="Asunto" asp-for="Asunto">
                                <label for="subject">Asunto</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea class="form-control border-0 bg-light" placeholder="Ingrese su Mensaje" id="message" style="height: 150px" asp-for="Mensaje"></textarea>
                                <label for="message">Mensaje</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary py-3 px-5" type="submit">Enviar Mensaje</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->