@model ApiBD.Models.TbConfMenu

@{
    ViewData["Title"] = "Editar Menu";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@*<h1>Edit</h1>

<h4>TbConfMenu</h4>
<hr />
*@

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h4 class="card-title">@ViewData["Title"]</h4>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Nombre" class="control-label"></label>
                                            <input asp-for="Nombre" class="form-control" />
                                            <span asp-validation-for="Nombre" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Ruta" class="control-label"></label>
                                            <input asp-for="Ruta" class="form-control" />
                                            <span asp-validation-for="Ruta" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Acceso" class="control-label"></label>
                                            @*<input asp-for="Acceso" class="form-control" />*@
                                            <select class="form-control" asp-for="Acceso">
                                                <option value="0">No</option>
                                                <option value="1">Dashbord</option>
                                            </select>
                                            <span asp-validation-for="Acceso" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Idtipomenu" class="control-label">Sub Menu</label>
                                            <select asp-for="Idtipomenu" class="form-control" asp-items="ViewBag.Idtipomenu"></select>
                                            <span asp-validation-for="Idtipomenu" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Padre" class="control-label"></label>
                                            @*<input asp-for="Padre" class="form-control" />*@
                                            <select asp-for="Padre" class="form-control" asp-items="ViewBag.Padre"></select>
                                            <span asp-validation-for="Padre" class="text-danger"></span>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Estado" class="control-label"></label>
                                            @*<input asp-for="Estado" class="form-control" />*@
                                            <select class="form-control" asp-for="Estado">
                                                <option value="1">Activo</option>
                                                <option value="0">Inactivo</option>
                                            </select>
                                            <span asp-validation-for="Estado" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="TipoProyecto" class="control-label">Tipo Proyecto</label>
                                            <select class="form-control" asp-for="TipoProyecto">
                                                <option value="web">Menu en la web</option>
                                                <option value="cms">Menu en el CMS</option>
                                            </select>

                                            <span asp-validation-for="TipoProyecto" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary"><i class="ti-save"></i> Grabar</button>
                                        <a class="btn btn-danger " asp-action="Index"><i class="ti-back-left"></i> Regresar</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>